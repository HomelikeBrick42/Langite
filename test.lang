const Type = #builtin "Type"
const IO = #builtin "IO"

const Unit = struct {}

const Bool = enum {
    true:  Unit,
    false: Unit,
}
const true  = Bool { true:  Unit {} }
const false = Bool { false: Unit {} }

const Option = fn(const T: Type) => enum {
    some: T,
    none: Unit,
}
const some = fn[const T: Type](value: T) => Option(T) { some: value   }
const none = fn[const T: Type]()         => Option(T) { none: Unit {} }

const main = fn[io: IO]() -> Unit {
    Unit {}
}
